{
    "compilerOptions": {
        "outDir": "../dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015" ],
        "baseUrl": ".",
        "paths": {
            "*": ["./../node_modules/*", "types/*"]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "public/**/*"
    ]
}